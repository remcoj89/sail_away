<div class="container">
  <h1><%= @boat.name %></h1>

  <div class="container d-flex justify-content-between my-5">
      <div class="image-container">
        <%= cl_image_tag @boat.photo.key, height: 500, width: 500, crop: :fill %>
          <div class="description mt-3">
            <h2>About the boat</h2>
            <p><%= @boat.description %></p>
          </div>
          <%= link_to "back to boats", boats_path, class: "btn btn-primary" %>
      </div>

    <div class="info">
      <div class="booking-card mb-3">
          <h2><%= @boat.name %></h2>
          <p><%= @boat.description %></p>
          <p>â‚¬ <%= @boat.price %>,- p. day<p>
          <%= link_to "Book now", new_booking_path, class: "btn btn-primary" %>
          <%= link_to "Change boat info", edit_boat_path(@boat), class: "btn btn-info" %>
          <%= link_to "Delete", boat_path(@boat), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-warning" %>
      </div>

      <div style="width: 100%; height: 400px;"
        data-controller="map"
        data-map-markers-value="<%= @markers.to_json %>"
        data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>






</div>
